@model List<PCS.Models.Session>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Back.cshtml";
}

<h3 class="text-center">All Scientific Sessions</h3>
<div class="container">
    <a href="@Url.Action("Create")" class="btn btn-primary pull-right">Create New</a>
    <div class="white-bg">
        <div class="row" style="margin-top:70px">
            <div class="col-lg-12 form-part">
                <table id="My" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Sr #</th>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var lst in Model)
                        {
                            <tr>
                                <td>@lst.id</td>
                                <td>@lst.Name</td>
                                <td>
                                    <a href="@Url.Action("Edit",new { id = lst.id})" class="btn btn-primary" ><i class="fa fa-pencil"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
